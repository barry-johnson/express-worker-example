{
    "camelcase": true,
    "curly": false,
    "eqeqeq": true,
    "forin": false,
    "immed": true,
    "indent": 4,
    "noempty": true,
    "quotmark": "single",
    "evil": true,

    "undef": true,
    "globals": {
        "module": false,
        "define": false,
        "process": false,
        "__dirname": false,
        "require" : false,
        "Promise" : true
